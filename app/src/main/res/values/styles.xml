<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Style.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="elevation">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemIconTint">@drawable/bnv_tab_item_foreground</item>
        <item name="itemTextColor">@drawable/bnv_tab_item_foreground</item>
        <item name="itemRippleColor">@drawable/bnv_tab_item_riple</item>
        <item name="itemTextAppearanceActive">
            @style/Style.BottomNavigationView.ItemTextAppearance.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/Style.BottomNavigationView.ItemTextAppearance.Inactive
        </item>
        <item name="android:background">@color/navViewBackgroundColor</item>
    </style>

    <style name="Style.BottomNavigationView.ItemTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Style.BottomNavigationView.ItemTextAppearance.Active" parent="Style.BottomNavigationView.ItemTextAppearance">
        <item name="android:textColor">@color/active</item>
    </style>

    <style name="Style.BottomNavigationView.ItemTextAppearance.Inactive" parent="Style.BottomNavigationView.ItemTextAppearance">
        <item name="android:textColor">@color/inactive</item>
    </style>

    <style name="Style.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>